<?xml version="1.0" encoding="UTF-8"?>


<platforms>
{% for platform in platforms %}
<platform>
	<id>{{platform.id}}</id>
	<console_name>{{platform.console_name}}</console_name>
	<controller>{{platform.controller}}</controller>
	<overview>{{platform.overview}}</overview>
	<developer>{{platform.developer}}</developer>
    <manufacturer>{{platform.manufacturer}}</manufacturer>
    <cpu>{{platform.cpu}}</cpu>
    <memory>{{platform.memory}}</memory>
    <graphics>{{platform.graphics}}</graphics>
    <sound>{{platform.sound}}</sound>
    <display>{{platformdisplay}}</display>
    <media>{{platform.media}}</media>
    <maxcontrollers>{{platform.maxcontrollers}}</maxcontrollers>
    <rating>{{platform.rating}}</rating>
    <images>{{platform.images}}</images>
</platform>
{% endfor %}
</platforms>
